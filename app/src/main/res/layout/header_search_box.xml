<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Window.Fullscreen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    android:padding="10dp">

    <TextView
        android:id="@+id/search_box_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_corner"
        android:drawablePadding="10dp"
        android:gravity="fill_vertical"
        android:hint="@string/search_hotel_and_city"
        android:padding="10dp"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_search_24"
        tools:ignore="UseCompatTextViewDrawableXml,TextContrastCheck,TextContrastCheck" />
</LinearLayout>

</LinearLayout>